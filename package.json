{
  "name": "friendface",
  "version": "1.0.0",
  "description": "Friendface Messaging Service",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts",
    "serve": "node -r dotenv/config dist/index.js",
    "watch-node": "nodemon -r dotenv/config dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "amqplib": "^0.5.5",
    "bunyan": "^1.8.12",
    "connect-mongo": "^3.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "moment": "^2.24.0",
    "mongoose": "^5.8.5",
    "morgan": "^1.9.1",
    "rotating-file-stream": "^2.0.1",
    "socket.io": "^2.3.0",
    "ws": "^7.2.1"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.6",
    "@types/connect-mongo": "^3.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.1",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "^5.5.39",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.7.8",
    "@types/socket.io": "^2.1.4",
    "@types/ws": "^6.0.4",
    "concurrently": "^4.1.2",
    "nodemon": "^1.19.2",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.1",
    "typescript": "^3.6.3"
  }
}
